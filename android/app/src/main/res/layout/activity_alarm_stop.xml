<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_alarm_red_gradient">

    <!-- Header Area: Date & Time (Kept from original, integrated into top) -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:alpha="0.8"
        android:text="Monday, April 10"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="56dp"
        android:text="9:02"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="-0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateText" />

    <!-- Bottom: Stop Button -->
    <FrameLayout
        android:id="@+id/stopButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/stopButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_stop_button_white"
            android:padding="0dp"
            android:text="@string/alarm_stop_button_full"
            android:textColor="#991B1B"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:stateListAnimator="@null"
            app:backgroundTint="@null" />
            
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

