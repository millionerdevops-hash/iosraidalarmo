platform :ios, '13.0'

# Standard Flutter Podfile helper
import_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
if File.exist?(import_path)
  File.foreach(import_path) do |line|
    matches = line.match(/\AFLUTTER_ROOT=(.*)\z/)
    if matches
      require File.expand_path(File.join(matches[1], 'packages', 'flutter_tools', 'bin', 'xcode_backend.rb'))
    end
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Force iOS 13.0 for all pods to fix compatibility issues
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      # Disable Bitcode for modern build systems
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
